---
layout: default
---
{% assign author = site.data.authors[page.author] %}

<article class="post {{ page.type }}">
	<header><h1>{{ page.title }}</h1></header>
	<div class="content">
		{{ content }}
		<footer>
			{% if author.hash %}
				<img class="gravatar" width="42" height="42"
					src="https://www.gravatar.com/avatar/{{ author.hash }}?s=42&d=identicon"
					srcset="https://www.gravatar.com/avatar/{{ author.hash }}?s=84&d=identicon 2x">
			{% endif %}
			{% if author.name %}
				<section>
					<h2>作者：{{ author.name }}</h2>
					{{ author.bio | markdownify }}
				</section>
			{% endif %}
		</footer>
	</div>
	<footer>
		{% if author.hash %}
			<img class="gravatar" width="49" height="49"
				src="https://www.gravatar.com/avatar/{{ author.hash }}?s=49&d=identicon"
				srcset="https://www.gravatar.com/avatar/{{ author.hash }}?s=98&d=identicon 2x">
		{% endif %}
		<div>{{ author.name }}</div>
		<div><time>{{ page.date | date: "%F" }}</time></div>
		<div>
			{% for category in page.categories %}
				<a rel="category tag" href="{{ site.baseurl }}/category/{{ category | slugify }}">
					{{ category }}</a>{% unless forloop.last %},{% endunless %}
			{% endfor %}
			{% if page.categories == empty %} 未分類 {% endif %}
		</div>
		<div>
			{% for tag in page.tags %}
				<a rel="tag" href="{{ site.baseurl }}/tag/{{ tag | slugify }}">
					{{ tag }}</a>{% unless forloop.last %},{% endunless %}
			{% endfor %}
		</div>
	</footer>
</article>
